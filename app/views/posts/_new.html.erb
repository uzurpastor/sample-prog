<%= form_for(post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new post..." %>
  </div>
  <%= hidden_field_tag 'user_id', "#{ params[:id] }"  %>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>