<!DOCTYPE html>
<html>
  <head>
    <% page_title = yield(:title) %>
    <% page_title += ' | ' if page_title.present? %>
    <title><%= page_title %>Ruby</title>    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <%= yield %>
      <%= render 'layouts/footer' %>
      <%= debug params.to_yaml  if Rails.env.development? %>
    </div>
  </body>
</html>
